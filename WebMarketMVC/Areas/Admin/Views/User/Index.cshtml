@using System.Linq
@model IEnumerable<WebMarket.Models.ApplicationUsers>
@{
  
}
<partial name="_Notofication"/>
<div class="container">
    <div class="card">
        <div class="card-header bg-dark">
            <div class="row">
                <div class="col-sm-6">
                    <h4 class="text-info text-white mt-2">نمایش کاربران سیستم</h4>

                </div>
                <div class="col-sm-6 text-end">
                    <a class="text-end btn btn-primary rounded-5 mt-2" asp-area="Identity" asp-page="/Account/Register">
                        افزورن کاربر جدید
                        <i class="fas fa-user-plus"></i>

                    </a>

                </div>
            </div>
            

        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th class="text-center">
                        نام کاربر
                    </th>
                    <th>
                       ایمیل
                    </th>
                    <th>تلفن

                    </th>
                    <th>
                        وضعیت
                    </th>
                    <th class="text-center">
                        آدرس کاربر
                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td class="text-center">
                            @obj.FullName
                        </td>
                        <td>
                            @obj.Email
                        </td>
                        <td>
                            @obj.PhoneNumber
                        </td>
                        <td>
                           @obj.EmailConfirmed
                        </td>
                        <td class="text-center">
                            @obj.Address
                           
                        </td>
                       
                        <td class="text-center">
                          
                            <a asp-route-Id="@obj.Id" asp-area="Admin" asp-controller="Category" asp-action="Edite">
                                <i class="btn btn-warning fas fa-edit">edite</i>
                            </a>
                            
                            <a asp-route-Id="@obj.Id" asp-area="Admin" asp-controller="Category" asp-action="Delete">
                                <i class="btn btn-danger fas fa-delete-left">delete</i>
                            </a>
                        </td>
                        
                    </tr>
                }
                </tbody>

            </table>
        </div>
    </div>
</div>

