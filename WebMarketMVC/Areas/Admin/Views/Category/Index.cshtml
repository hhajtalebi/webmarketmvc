@model IEnumerable<WebMarket.Models.Category>
@{
  
}
<partial name="_Notofication"/>
<div class="container">
    <div class="card shadow">
        <div class="card-header bg-dark">
            <div class="row">
                <div class="col-sm-6">
                    <h4 class="text-info text-white mt-2">نمایش دسته بندی ها</h4>

                </div>
                <div class="col-sm-6 text-end">
                    <a class="text-end btn btn-primary rounded-5 mt-2" asp-area="Admin" asp-controller="Category" asp-action="Create">افزورن ترتیب جدید</a>

                </div>
            </div>
            

        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th class="text-center">
                        نام دسته
                    </th>
                    <th class="text-center">
                        ترتیب نمایش
                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td class="text-center">
                            @obj.Name
                        </td>
                        <td class="text-center">
                            @obj.DisplayOrder
                        </td>
                        <td class="text-center">
                          
                            <a asp-route-Id="@obj.Id" asp-area="Admin" asp-controller="Category" asp-action="Edite">
                                <i class="btn btn-warning fas fa-edit">edite</i>
                            </a>
                            
                            <a asp-route-Id="@obj.Id" asp-area="Admin" asp-controller="Category" asp-action="Delete">
                                <i class="btn btn-danger fas fa-delete-left">delete</i>
                            </a>
                        </td>
                        
                    </tr>
                }
                </tbody>

            </table>
        </div>
    </div>
</div>

