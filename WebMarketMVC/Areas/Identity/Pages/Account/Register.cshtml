@page
@model RegisterModel
@{
    ViewData["Title"] = "ثبت نام";
   
}
<div class="card shadow">
    <div class="card-header">
        <h1 class="text-center">@ViewData["Title"]</h1>

    </div>
    <div class="card-body">
        
        <div class="row">
            <div class="col-md-6 mx-auto">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    
                   
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating m-3">
                        
                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-control">
                            <option disabled="disabled" selected="selected">
                                ----انتخاب نقش-----
                            </option>
                        </select>
                    </div>
                    <div class="form-floating m-3">
                        
                        <select asp-for="Input.CompanyId" style="display: none;" asp-items="@Model.Input.CompanyList" class="form-control">
                            <option disabled="disabled" selected="selected">
                                ----انتخاب شرکت-----
                            </option>
                        </select>
                    </div>
                    <div class="form-floating m-3">
                        <input asp-for="Input.FullName" class="form-control text-end" autocomplete="FullName" aria-required="true" />
                        <label asp-for="Input.FullName"></label>
                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                    </div>

                    <div class="form-floating m-3">
                        <input asp-for="Input.Email" class="form-control text-end" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating m-3">
                        <input asp-for="Input.Password" class="form-control text-end" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating m-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control text-end" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating m-3">
                        <input asp-for="Input.Address" class="form-control text-end" autocomplete="Address" aria-required="true" />
                        <label asp-for="Input.Address"></label>
                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                    </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">ثبت</button>
                </form>
            </div>
   
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            $('#Input_Role').change(function() {
                var selection = $('#Input_Role option:Selected').text();
                if (selection !='شرکت') {
                    $('#Input_CompanyId').hide();
                } else {
                    $('#Input_CompanyId').show();
                }
            })
        })

    </script>
}
